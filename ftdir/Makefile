NAME=libftdir.a

SRC_SEARCH =srcs/ft_size_dir.c\

SRC = $(wildcard $(SRC_SEARCH))

OBJ = $(SRC:.c=.o)

INCLUDES = -I includes -I ../libft/includes

all: $(NAME)

$(NAME): $(OBJ)
	ar rc $(NAME) $(OBJ)
	ranlib $(NAME)

%.o: %.c libft
	gcc -c $< -o $@ -Wall -Wextra -Werror $(INCLUDES)

.PHONY: libft
libft:
	make -C ../libft

.PHONY: clean
clean:
	rm -rf $(OBJ)

.PHONY: fclean
fclean:	clean
	rm -rf $(NAME)

.PHONY: re
re: fclean all

